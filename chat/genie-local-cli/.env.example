# Genie Local CLI Configuration

# API Server Configuration
API_BASE_URL=http://localhost:9888
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# WebSocket Configuration (if API supports it)
WS_URL=ws://localhost:9888/ws
WS_RECONNECT_ATTEMPTS=5
WS_RECONNECT_DELAY=1000

# CLI Configuration
CLI_NAME=genie-cli
CLI_VERSION=0.1.0
CLI_DEBUG=false

# Session Configuration
SESSION_DIR=~/.genie-cli/sessions
SESSION_MAX_HISTORY=100
SESSION_AUTO_SAVE=true

# Display Configuration
ENABLE_COLORS=true
ENABLE_SPINNER=true
STREAM_DELAY=50
MAX_DISPLAY_WIDTH=120

# Development Configuration
NODE_ENV=development
LOG_LEVEL=info
DISABLE_UPDATE_CHECK=false